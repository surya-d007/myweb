        #navbar {
            background-color: #333;
            color: white;
            border: 20px;
            height: 100px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        #navbar ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        
        #navbar li {
            margin-right: 50px;
        }
        
        #navbar a {
            margin-left: 15px;
            text-decoration: none;
            color: white;
            padding-right: 20px;
            padding-top: 20px;
            padding-bottom: 20px;
            padding-left: 20px;
        }

        .picture {
            background-color: black;
            margin-top: 15px;
        }
        
        .dropdown {
            position: relative;
        }

        .dropdown-container {
            position: relative;
            height: 100px;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #908383;
            min-width: 150px;
            z-index: 1;
            top: calc(100% + 15px); 
            transform: translateY(0);
            right: 0; /* Ensure dropdown stays within the viewport */
        }

        .dropdown-container:hover .dropdown-content,
        .dropdown-content:hover {
            display: block; /* Keep dropdown open on hover */
        }
        
        #profile {
            display: flex;
            align-items: center;
        }

        #profile img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .dropdown-content a {
            display: block;
            padding-right: none;
            text-decoration: none;
            color: white;
            font-size: 14px; /* Adjust font size */
        }

